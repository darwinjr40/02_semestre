unit UCHelicoptero;

interface
uses   sysutils,math, Vcl.Dialogs;
type
Direcciones = Record
    izquierda : Boolean;
    derecha : Boolean;
    superior : Boolean;
    inferior : Boolean;
 End;
  Helicoptero = class

       x, y : integer;
       Direccion : Direcciones;
    private

    public
    constructor crear();
    procedure moverse(key :word);
  end;

implementation

{ Helicoptero }

constructor Helicoptero.crear;
begin
  x := 0;
  y := 0;
  Direccion.izquierda := false;
  Direccion.superior := false;
  Direccion.derecha := false;
  Direccion.inferior := false;
end;

procedure Helicoptero.moverse(key: word);
begin
  case key of

   37:  begin  //izquierda
          Direccion.izquierda := true;
        end;

   38:  begin  //superior
          Direccion.superior := true;
        end;

   39:  begin  //derecha

           Direccion.derecha := true;
        end;


   40:  begin  //inferior
          Direccion.inferior := true;
        end;


   32:  begin  //espacio

        end;

 end;
end;

end.
