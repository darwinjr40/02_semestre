unit UCController;

interface

uses UCEscenario;

   type
    Controller = class
      private
        objEscenario : Escenario;
      public
      constructor crear(x : Escenario);
      procedure moverse(k : Word);

    end;
implementation

{ Controller }

constructor Controller.crear(x: Escenario);
begin
  Self.objEscenario := x;
end;

procedure Controller.moverse(k: Word);
begin
  self.objEscenario.getCabeza.Moverse(k);
end;

end.
